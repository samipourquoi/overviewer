{
	"compilerOptions": {
		"strict": true,
		"target": "ES6",
		"outDir": "build/server/",
		"incremental": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"*": [ "*", "src/types/*" ]
		}
	},
	"include": [
		"src/server/**.ts"
	],
	"exclude": [
		"node_modules/",
		"build/",
		"thirdparty/",
		"assets/"
	]
}